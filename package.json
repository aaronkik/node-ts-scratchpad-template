{
  "name": "node-ts-scratchpad-template",
  "version": "1.0.0",
  "description": "A modern template for a Node.js TypeScript project",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --platform=node --outdir=dist",
    "lint": "eslint . --color --ext .ts",
    "prettier": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "tsc -w",
    "prepare": "husky install"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "esbuild": "0.19.8",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown .",
    "*.ts": "eslint --color --fix --max-warnings=0"
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.4"
  }
}
